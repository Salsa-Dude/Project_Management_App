<div class="title">
<h1><%=@task.name%> Details</h1>
</div><br>

<div class="description">
  <h2>Description:</h2>
  <p><%= @task.description %></p><br>
  <h3>For project: </h3>
  <p><%= link_to @task.project.name, project_path(@task.project) %></p>
</div><br>

<div class="headers">
  <li>Status: <%=@task.status%></li>
  <li>Due Date: <%=@task.due_date%></li>
</div>
