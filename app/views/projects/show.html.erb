<div class="title">
<h1><%=@project.name%></h1>
</div><br>

<div class="description">
  <h2>Description:</h2>
  <p><%= @project.description %></p>
</div><br>

<div class="headers">
  <li>Status: <%=@project.status%></li>
  <li>Due Date: <%=@project.due_date%></li>
</div>

<div class="collaborators">
  <ul>
    <h2>Collaborators:</h2>
    <%=link_to "Add Collaborator", new_project_collaborator_path(@project.id) %>
    <ul>
      <% @project.collaborators.each do |c| %>
      <li>
        <p><%= link_to c.user.name, project_collaborator_path(@project.id, c.id)%></p>
      </li>
        <% end %>
    </ul>
  </ul>
</div>

<div class="tasks">
  <ul>
    <h2>Tasks:</h2>
    <%= link_to "Create Task", new_project_task_path(@project.id) %>
    <br>
    <br>
    <% @project.tasks.each do |task|%>
    <li>Name: <%= link_to task.name, project_task_path(@project.id, task.id) %></li>
    <ul>
      <li>Status: <%= task.status %></li>
      <li>Due Date: <%= task.due_date %></li>
    </ul>
    <% end %>
  </ul>
</div><br>

<div class="notes">
  <ul>
    <h3>Notes:</h3>
    <%= link_to "Add a Note", new_project_note_path(@project.id) %>
    <br></br>
    <ul>
      <% @project.notes.each do |note| %>
      <li>"<%= note.content %>" ~ posted by: <%= note.user.name %>
        <%= link_to "Edit Note", edit_project_note_path(@project.id, note.id)%></li><br>
      <% end %>
    </ul>
  </ul>
</div>

<div class="navigate">
  <br>
  <br>
    <%= link_to "Home", users_path%>     <%= link_to "Return to Project Page", projects_path %>
     <%= link_to "Logout", "/logout", method: "DELETE"%>
</div>
