

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
  <title>Project</title>
</head>
<body class="show-project-page">
  <section id="sideMenu">
    <h2>WePlan</h2>
    <nav>
      <a href="/users"><i class="fas fa-home"></i>Home</a>
      <a href="/projects"><i class="fas fa-paperclip"></i></i>Projects</a>
      <a href="/projects"><i class="fas fa-paperclip"></i></i>Edit Project</a>
      <a href="/projects/new"><i class="fas fa-sticky-note"></i>Create Task</a>
    </nav>
  </section>

  <header>
    <div class="search-area">
      <i class="fas fa-search"></i>
    <input type="text" name="" value="">
    </div>
    <div class="user-area">
      <%= link_to "Logout", "/logout", method: "DELETE"%>
      <a href="/root">Home</a>
    </div>
  </header>

  <div class="user-project">
    <ul class="inner-project-box">
      <div class="title">
        <h1><%=@project.capitalize_stuff %></h1>
        <li><%= link_to "Edit Project", edit_project_path(@project)%></li><br>
      </div>
    </ul>
  </div>

</body>
</html>














<div class="description">
  <h2>Description:</h2>
  <p><%= @project.description %></p>
</div><br>

<div class="headers">
  <li>Status: <%=@project.status%></li>
  <li>Due Date: <%=@project.format_due_date%></li>
</div>

<div class="collaborators">
  <ul>
    <h2>Collaborators:</h2>
    <%=link_to "Add Collaborator", new_project_collaborator_path(@project.id) %>
    <ul>
      <% @project.collaborators.each do |c| %>
      <% if c.user != current_user%>
      <li>
        <p><%= link_to c.user.capitalize_stuff, project_collaborator_path(@project.id, c.id)%></p>
        <% end %>
      </li>
        <% end %>
    </ul>
  </ul>
</div>

<div class="tasks">
  <ul>
    <h2>Tasks:</h2>
    <%= link_to "Create Task", new_project_task_path(@project.id) %>
    <br>
    <br>
    <ul>
      <% @project.tasks.each do |task|%>
      <li><%= link_to task.capitalize_stuff, project_task_path(@project.id, task.id) %></li>
      <ul>
        <li>Status: <%= task.status %></li>
        <li>Due Date: <%= task.format_due_date %></li>
      </ul>
      <% end %>
    </ul>
  </ul>
</div><br>

<div class="notes">
  <ul>
    <h3>Notes:</h3>
    <%= link_to "Add a Note", new_project_note_path(@project.id) %>
    <br></br>
    <ul>
      <% @project.notes.each do |note| %>
      <li>"<%= note.content %>" ~ posted by: <%= note.user.capitalize_stuff %><br>
        <%= link_to "Edit Note", edit_project_note_path(@project.id, note.id)%></li><br>
      <% end %>
    </ul>
  </ul>
</div>

<div class="navigate">
  <br>
  <br>
    <%= link_to "Home", users_path%>     <%= link_to "Return to Project Page", projects_path %>
     <%= link_to "Logout", "/logout", method: "DELETE"%>
</div>
