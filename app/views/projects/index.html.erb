<h1>Projects</h1>

<h2>Hello <%= current_user.name%></h2>
<ul>
  <% if !current_user.projects.empty?%>
    <% current_user.projects.each do |project| %>
    <li>Name: <%= link_to project.name, project_path(project) %></li>
    <ul>
      <li>Status: <%= project.status %></li>
      <li>Due Date: <%= project.due_date %></li>
      <li><%= link_to "Edit Project", edit_project_path(project)%></li><br>
    </ul>
    <% end %>
  <% end %>
</ul><br>
<ul>
  <br>
 <%= link_to "See Tasks for All Projects", tasks_path%><br>
 <%= link_to "See Notes for All Projects", notes_path%><br>
