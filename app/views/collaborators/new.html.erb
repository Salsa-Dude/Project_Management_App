<h1>Add Collaborator</h1>

<%= form_for @collaborator do |f| %>
   <% if @collaborator.errors.any? %>
    <% @collaborator.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  <% end %>
  <label for="email">Email</label>
  <input type="text" name="email">
  <%= f.label :project %>
  <%= f.collection_select :project_id, current_user.projects, :id, :name, prompt: true %>
  <%= f.submit "Add Collaborator" %>

<% end %>
